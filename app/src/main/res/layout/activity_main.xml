<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_60"
        android:text="@string/money_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/money_counter"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_36"
        android:text="@string/_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/ten_cents"
        android:layout_width="@dimen/width_image_cent"
        android:layout_height="@dimen/height_image_cent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_cents"
        app:layout_constraintTop_toTopOf="@+id/five_cents"
        app:srcCompat="@mipmap/ten_cents" />

    <ImageView
        android:id="@+id/five_cents"
        android:layout_width="@dimen/width_image_cent"
        android:layout_height="@dimen/height_image_cent"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@+id/ten_cents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_counter"
        app:srcCompat="@mipmap/five_cents" />

    <ImageView
        android:id="@+id/quarter_cent"
        android:layout_width="@dimen/width_image_cent"
        android:layout_height="@dimen/height_image_cent"
        android:layout_marginTop="@dimen/medium_36"
        app:layout_constraintEnd_toStartOf="@+id/dolar_cent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@mipmap/quarter" />

    <ImageView
        android:id="@+id/dolar_cent"
        android:layout_width="@dimen/width_image_cent"
        android:layout_height="@dimen/height_image_cent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quarter_cent"
        app:layout_constraintTop_toTopOf="@+id/quarter_cent"
        app:srcCompat="@mipmap/one_dollar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_16"
        android:text="@string/five_cents"
        app:layout_constraintEnd_toEndOf="@+id/five_cents"
        app:layout_constraintStart_toStartOf="@+id/five_cents"
        app:layout_constraintTop_toBottomOf="@+id/five_cents" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ten_cents"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents"
        app:layout_constraintStart_toStartOf="@+id/ten_cents"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_16"
        android:text="@string/quarter_cents"
        app:layout_constraintEnd_toEndOf="@+id/quarter_cent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/quarter_cent"
        app:layout_constraintTop_toBottomOf="@+id/quarter_cent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dolar_cent"
        app:layout_constraintEnd_toEndOf="@+id/dolar_cent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/dolar_cent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>